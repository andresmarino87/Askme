<div class="container" data-ng-app="askme" data-ng-controller="questionCtrl">
	<link href="http://cdn.phpoll.com/css/animate.css" rel="stylesheet">
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    	<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="">Askme</a>
			</div>
			<div id="navbar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					<li class="active"><a href="">Home</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">Sign Up <span class="caret"></span></a>
                        <ul class="dropdown-menu dropdown-lr animated flipInX" role="menu">
                            <div class="col-lg-12">
                                <div class="text-center"><h3><b>Sign Up</b></h3></div>
								<form name="registrationForm" ng-submit="sign_up()">
									<div class="form-group">
										<div class="form-group">
											<label>Email</label>
											<input type="email" name="email" class="form-control" ng-model="user.email" placeholder="Email" required>
											<span ng-show="errorLoginEmail">{{errorLoginEmail}}</span>
										</div>
										<div class="form-group">
											<label>Password</label>
											<input type="password" name="password" class="form-control" ng-model="user.password" placeholder="Password" required>
											<span ng-show="errorLoginPass">{{errorLoginPass}}</span>
										</div>
										<div class="form-group">
											<label>ConfirmPassword</label>
											<input type="password" name="confirmPassword" class="form-control" ng-model="user.confirm_password" placeholder="Confirm Password" required>
											<span ng-show="errorLoginPass">{{errorLoginPass}}</span>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-xs-6 col-xs-offset-3">
												<button type="submit" tabindex="4" class="form-control btn btn-info">Register Now</button>
											</div>
										</div>
									</div>
    
								</form>
                            </div>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">Log In <span class="caret"></span></a>
                        <ul class="dropdown-menu dropdown-lr animated slideInRight" role="menu">
                            <div class="col-lg-12">
                                <div class="text-center"><h3><b>Log In</b></h3></div>
                                <form name="loginForm" ng-submit="login()">
									<div class="form-group">
										<label>Email</label>
										<input type="email" name="email" class="form-control" ng-model="user.email" class="form-control" placeholder="email" value="" required>
										<span ng-show="errorLoginEmail">{{errorLoginEmail}}</span>
									</div>
	                                <div class="form-group">
										<label>Password</label>
										<input type="password" name="password" class="form-control" ng-model="user.password" class="form-control" placeholder="Password" required>
										<span ng-show="errorLoginPass">{{errorLoginPass}}</span>
									</div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-xs-5 pull-right">
                                            	<button type="submit" class="form-control btn btn-success">Log In</button>
                                           </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" ng-click="logout()">Log Out</a>
                    </li>
                </ul>
			</div>
		</div>
	</nav>
	<div>
		<div class="row">
			<div class="col-xs-6 col-md-4">
				<h2>Questions</h2>
				<form name="questionForm" ng-submit="askQuestion()">
					<div class="form-group">
						<label>Question</label>
						<input type="text" name="question" class="form-control" ng-model="question.question" required>
						<span ng-show="errorQuestion">{{errorQuestion}}</span>
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
				<div class="list-group">
				<button data-ng-repeat="item in questions" class="list-group-item list-group-item-action" ng-click="viewAnswers(item)">
					<p ng-click="viewAnswers(item)">
						{{item.id}} {{item.question}}
					</p>
				</button>

				</div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-8">
				<h2>Answers</h2>
				<form name="answerForm" ng-submit="answerQuestion()">
					<div class="form-group">
						<label>Answer</label>
						<input type="text" name="answer" class="form-control" ng-model="answer.answer" required>
						<span ng-show="errorQuestion">{{errorAnswer}}</span>
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
				<div class="form">
				<li class="list-group-item list-group-item-action" data-ng-repeat="answer in answers">
					{{answer.answer}}
				</li>
				</div>
			</div>

		</div>
</div>